{
  "name": "node-relayer",
  "version": "1.0.0",
  "description": "Index and execute pine orders",
  "author": "Pine Finance team",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "build": "tsc --project tsconfig.json",
    "indexer:mainnet": "CHAIN_ID=1 LOGGER_FILE=logs/indexOrders ts-node ./src/indexOrders.ts",
    "indexer:rinkeby": "CHAIN_ID=4 LOGGER_FILE=logs/indexOrders ts-node ./src/indexOrders.ts",
    "indexer:watch": "LOGGER_FILE=logs/indexOrders nodemon --exec ts-node ./src/indexOrders.ts",
    "executor:mainnet": "CHAIN_ID=1 LOGGER_FILE=logs/executeOrders ts-node --type-check ./src/executeOrders.ts",
    "executor:mainnet:find-best": "CHAIN_ID=1 FIND_BEST=true LOGGER_FILE=logs/executeOrders ts-node --type-check ./src/executeOrders.ts",
    "executor:mainnet:balancer": "CHAIN_ID=1 HANDLER=balancer LOGGER_FILE=logs/executeOrders_balancer ts-node --type-check ./src/executeOrders.ts",
    "executor:mainnet:1Inch": "CHAIN_ID=1 HANDLER=1Inch LOGGER_FILE=logs/executeOrders_1Inch ts-node --type-check ./src/executeOrders.ts",
    "executor:mainnet:kyber": "CHAIN_ID=1 HANDLER=kyber LOGGER_FILE=logs/executeOrders_kyber ts-node --type-check ./src/executeOrders.ts",
    "executor:rinkeby": "CHAIN_ID=4  LOGGER_FILE=logs/executeOrders ts-node --type-check ./src/executeOrders.ts",
    "executor:rinkeby:find-best": "CHAIN_ID=4 FIND_BEST=true LOGGER_FILE=logs/executeOrders ts-node --type-check ./src/executeOrders.ts",
    "executor:rinkeby:balancer": "CHAIN_ID=4 HANDLER=balancer ts-node --type-check ./src/executeOrders.ts",
    "executor:rinkeby:kyber": "CHAIN_ID=4 HANDLER=kyber ts-node --type-check ./src/executeOrders.ts",
    "executor:watch": "LOGGER_FILE=logs/executeOrders nodemon --exec ts-node ./src/executeOrders.ts"
  },
  "dependencies": {
    "@balancer-labs/sor": "^0.3.3",
    "@ethersproject/bytes": "^5.0.3",
    "@ethersproject/contracts": "^5.0.2",
    "@ethersproject/providers": "^5.0.5",
    "@ethersproject/wallet": "^5.0.2",
    "@types/async-retry": "^1.4.1",
    "@types/bn.js": "^4.11.5",
    "@types/dotenv": "^6.1.1",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/node": "^14.6.1",
    "@types/pg": "^7.4.14",
    "@types/progress": "^2.0.3",
    "async-retry": "^1.2.3",
    "bn.js": "^4.11.8",
    "dotenv": "^8.1.0",
    "ethereumjs-util": "^6.1.0",
    "ethers": "^5.0.8",
    "isomorphic-fetch": "^2.2.1",
    "pg": "^7.12.1",
    "progress": "^2.0.3",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.1.0",
    "typeorm": "^0.2.19",
    "typescript": "^3.9.7",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.2.1"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1",
    "source-map-support": "^0.5.12",
    "tslint": "^6.1.3",
    "tslint-plugin-prettier": "^2.3.0"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  }
}